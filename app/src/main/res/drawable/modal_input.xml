<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/modalInputFocused"></solid>
            <padding android:bottom="16dp" android:left="20dp" android:right="20dp" android:top="16dp"/>
        </shape>
    </item>
    <item android:state_focused="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/modalInputBlurred"></solid>
            <padding android:bottom="16dp" android:left="16dp" android:right="16dp" android:top="16dp"/>
        </shape>
    </item>
</selector>