<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <layer-list>
            <item>
                <inset>
                    <shape android:shape="rectangle">
                        <solid android:color="@color/modalButtonDisabled"/>
                        <corners android:bottomRightRadius="24dp" android:topRightRadius="8dp" android:topLeftRadius="8dp" android:bottomLeftRadius="8dp"/>
                        <padding android:top="20dp" android:bottom="20dp"></padding>
                    </shape>
                </inset>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <inset>
                    <shape android:shape="rectangle">
                        <solid android:color="@color/modalButtonPressed"/>
                        <corners android:bottomRightRadius="24dp" android:topRightRadius="8dp" android:topLeftRadius="8dp" android:bottomLeftRadius="8dp"/>
                        <padding android:top="20dp" android:bottom="20dp"></padding>
                    </shape>
                </inset>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <inset>
                    <shape android:shape="rectangle">
                        <solid android:color="@color/modalButtonNormal"/>
                        <corners android:bottomRightRadius="24dp" android:topRightRadius="8dp" android:topLeftRadius="8dp" android:bottomLeftRadius="8dp"/>
                        <padding android:top="20dp" android:bottom="20dp"></padding>
                    </shape>
                </inset>
            </item>
        </layer-list>
    </item>
</selector>